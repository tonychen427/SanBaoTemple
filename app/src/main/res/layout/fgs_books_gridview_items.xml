<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/gridView_item_height"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/customborder">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/listItem_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <com.foguangshan.widgetlibrary.canvasImageView.RoundedImageView
        android:id="@+id/gridItemImageCircle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/gridView_title_font_size"
        android:layout_gravity="center"
        android:id="@+id/bookContent"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/favorite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".50"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".50"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>